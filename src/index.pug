          .container-fluid
            .row.l-popular__row
              .col-md-12
                .swiper-container.l-popular__swiper(data-aos="fade-up")
                  .swiper-wrapper.l-popular__wrapper
                    .swiper-slide.l-popular__swiper-slide
                      .c-card
                        .c-card__img-wrap
                          img(src="img/popular/popular01.jpg", alt="鬆餅球")
                        .c-card__body
